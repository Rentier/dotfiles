[colors]
background = ${xrdb:background:#222}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color7:#222}
focused = ${xrdb:color3:#222}
urgent = ${xrdb:color1:#222}

[bar/main-bottom]
dpi=${xrdb:Xft.dpi:-1}
monitor = eDP1
bottom = true
width = 100%
height = 50

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${bar/main-bottom.background}
line-size = 2 

spacing = 1 
padding-right = 4
module-margin-left = 0
module-margin-right = 6

font-0 = NotoSans-Regular:size=9;0
font-1 = FontAwesome:size=9;0

tray-position = right
tray-transparent = false

modules-left = i3
modules-right = pulseaudio date

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

label-focused-foreground = ${colors.foreground-alt}
label-focused-underline = ${colors.focused}

label-urgent-underline = ${colors.urgent}

label-separator = |
label-separator-padding = 2
label-seperator-padding-bottom = -2
label-separator-foreground = #ffb52a

[module/date]
type = internal/date
date = %%{F#99}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}
date-alt = %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_00_1f.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points) (unreleased)
; Default: 5
interval = 5

[module/clock]
type = internal/date
interval = 2
date = %%{F#999}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}

; vim:ft=dosini
